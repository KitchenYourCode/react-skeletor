{
  "name": "@trainline/react-skeletor",
  "version": "0.1.7",
  "description": "Make your application look nice when its loading!",
  "main": "lib/index.js",
  "directories": {
    "test": "test"
  },
  "typings": "lib/index.d.ts",
  "scripts": {
    "clean": "rm -rf ./lib",
    "build": "tsc",
    "build:watch": "tsc -w",
    "prepublish": "npm run clean && npm run build",
    "deploy": "npm publish --access public",
    "lint": "tslint 'src/**/*.{ts,tsx}'",
    "test": "jest --config test.config.json --no-cache",
    "test:watch": "jest --config test.config.json --watch"
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trainline/react-skeletor.git"
  },
  "keywords": [
    "React",
    "Skeleton loading",
    "High order component",
    "Loading"
  ],
  "authors": [
    "Trainline",
    "Jamie Copeland",
    "Alexandre Rieux"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/trainline/react-skeletor/issues"
  },
  "homepage": "https://github.com/trainline/react-skeletor#readme",
  "dependencies": {
    "prop-types": "^15.5.10",
    "react": "^15.5.4"
  },
  "devDependencies": {
    "@types/enzyme": "^2.7.6",
    "@types/jest": "^19.2.2",
    "@types/prop-types": "^15.5.1",
    "@types/recompose": "^0.22.0",
    "enzyme": "^2.8.2",
    "jest": "^20.0.4",
    "react-dom": "^15.5.4",
    "react-test-renderer": "^15.5.4",
    "recompose": "^0.23.4",
    "ts-jest": "^20.0.4",
    "tslint": "^5.3.2",
    "tslint-eslint-rules": "^4.1.0",
    "tslint-microsoft-contrib": "^5.0.0",
    "tslint-react": "^3.0.0",
    "typescript": "^2.3.3"
  }
}
